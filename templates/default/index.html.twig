{% extends 'base.html.twig' %}
{% block title  %}
    Главная
{% endblock title %}
{% block body %}
    <div class="container-fluid">
        <h2>Последние статьи нашего блога</h2><a class="btn btn-primary" href="{{ path('add_post')}}">Добавить пост</a>
        {% for post in lastPosts %}
            <h3><a href="{{ path('post_show',  {'id': post.id}) }}">{{ post.topic }}</a></h3>
            Дата публикации: {{ post.datepost|date("m-d-Y") }}
            <hr>
            {{ post.content|raw }} <a href="{{ path('post_show',  {'id': post.id}) }}">Читать далее</a>
            <hr>
        {% endfor %}
    </div>
{% endblock body %}